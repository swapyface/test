sns.kdeplot(data['price'], color='green', fill=True)
plt.title('Density Plot for Price')
plt.xlabel('Price')
plt.ylabel('Density')
plt.show()


import numpy as np

# Apply log transformation
data['log_price'] = np.log1p(data['price'])  # log(1 + x) to avoid log(0)

# Histogram for log-transformed data
sns.histplot(data['log_price'], kde=True, bins=50, color='orange')
plt.title('Log-Transformed Price Distribution')
plt.xlabel('Log(Price)')
plt.ylabel('Frequency')
plt.show()


sns.boxplot(x='rating', y='price', data=data)
plt.title('Box Plot of Price by Rating')
plt.xlabel('Rating')
plt.ylabel('Price')
plt.show()


import plotly.express as px

fig = px.histogram(data, x='price', nbins=50, title='Price Distribution')
fig.update_layout(xaxis_title='Price', yaxis_title='Frequency')
fig.show()
