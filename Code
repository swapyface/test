data[['IsOutlier', 'Comment']] = data.apply(
    lambda row: (
        ('Exclude', 'Maturity date is less than 0') if row['Maturity'] < 0 else
        ('Exclude', 'Contains WR or NR') if any(val in ['WR', 'NR'] for val in row[cat_columns]) else
        ('Exclude', 'BreakEvenSpread less than 5 or greater than 10,000') if (row['BreakEvenSpread'] < 5 or row['BreakEvenSpread'] > 10000) else
        ('Include', '')
    ),
    axis=1
).apply(pd.Series)
