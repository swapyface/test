# Configure logging
logging.basicConfig(
    filename="program_execution.log",  # Logs saved to a file
    level=logging.INFO,                # Log INFO and above levels
    format="%(asctime)s - %(levelname)s - %(message)s",
)

logging.info("Starting the program...")
logging.info(f"Processing {len(unique_ratings)} unique ratings...")

for Rating in unique_ratings:
    logging.info(f"Processing Rating: {Rating}")
    # Rest of the logic
    logging.info(f"Finished processing Rating: {Rating}")

logging.info("Program completed successfully!")
