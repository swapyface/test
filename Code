import pandas as pd

# Sample DataFrame
data = {
    'date_column': ['2024-11-01', '2024-11-02', 'invalid_date', None, '2024-11-05']
}
df = pd.DataFrame(data)

# Attempt conversion and capture errors
def identify_invalid_dates(column):
    invalid_records = []
    for index, value in column.items():
        try:
            pd.to_datetime(value)
        except Exception as e:
            invalid_records.append((index, value, str(e)))
    return invalid_records

# Check invalid records
invalid_records = identify_invalid_dates(df['date_column'])

# Display invalid records
if invalid_records:
    for record in invalid_records:
        print(f"Index: {record[0]}, Value: {record[1]}, Error: {record[2]}")
else:
    print("No invalid records found.")