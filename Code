import matplotlib.pyplot as plt
import seaborn as sns

# Assuming 'df' is your dataframe, 'category_column' is the categorical column, and 'numerical_column' is the numerical column
plt.figure(figsize=(10, 6))
sns.boxplot(x='category_column', y='numerical_column', data=df)
plt.title('Box Plot of Numerical Column by Category')
plt.xticks(rotation=45)
plt.show()

plt.figure(figsize=(10, 6))
sns.violinplot(x='category_column', y='numerical_column', data=df)
plt.title('Violin Plot of Numerical Column by Category')
plt.xticks(rotation=45)
plt.show()

categories = df['category_column'].unique()
for category in categories:
    subset = df[df['category_column'] == category]
    plt.figure(figsize=(8, 5))
    sns.histplot(subset['numerical_column'], kde=True)
    plt.title(f'Distribution of Numerical Column for Category: {category}')
    plt.show()

g = sns.FacetGrid(df, col='category_column', col_wrap=3, height=4)
g.map(sns.histplot, 'numerical_column', kde=True)
plt.show()

