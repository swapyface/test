import pandas as pd

# Input list
columns_with_types = ["rating = string", "id = int"]

# Parse the list to extract column names and data types
parsed_columns = [item.split(" = ") for item in columns_with_types]
columns_with_types_dict = {col[0]: col[1] for col in parsed_columns}

# Create an empty DataFrame with the specified columns
df = pd.DataFrame(columns=columns_with_types_dict.keys())

# Assign data types to the columns
for col, dtype in columns_with_types_dict.items():
    # Map string-based data types to pandas/numpy dtypes
    dtype_mapping = {
        "string": "string",
        "int": "int64",
        "float": "float64",
        "bool": "bool"
    }
    df[col] = df[col].astype(dtype_mapping.get(dtype, "object"))

# Print the DataFrame and its data types
print(df)
print(df.dtypes)