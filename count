from datetime import date, datetime

# Convert ISO-formatted strings to date objects
input_end_date = date.fromisoformat('2024-12-02')
input_start_date = date.fromisoformat('2024-11-02')

# Calculate the number of days between the two dates
num_of_days = (input_end_date - input_start_date).days

# Format the end date into a custom string
formatted_end_date_str = f"{input_end_date.year},{input_end_date.month},{input_end_date.day}"

# Convert the custom string back to a datetime object
formatted_end_date = datetime.strptime(formatted_end_date_str, "%Y,%m,%d")

# Print results
print("Number of days:", num_of_days)
print("Formatted end date (datetime):", formatted_end_date)